<p id="notice"><%= notice %></p>

<h1>Books Catalog</h1>

<table class="tables">
  <thead>
  <tr>
    <th colspan="3"> Books</th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td> <%= book.name %> </td>
        <td><%= link_to 'View Details', book %></td>
        <td><%= link_to 'Checkout', controller:'books', action: 'reserve', id: book.id %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a new book', controller: 'books', action: 'add_new_book_form' %>
